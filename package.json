{
  "name": "the-next-client",
  "version": "0.1.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "copyright": "Copyright ⓒ 2024. THE NEXT inc. all rights reserved.",
  "author": "THE NEXT TEAM",
  "dependencies": {
    "@iconify/react": "^4.1.1",
    "@tanstack/react-query": "^5.37.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.97",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.7.0",
    "dayjs": "^1.11.11",
    "electron-log": "^5.1.4",
    "electron-updater": "^6.1.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.2.1",
    "react-router-dom": "^6.23.1",
    "react-scripts": "5.0.1",
    "realgrid": "^2.8.2",
    "recoil": "^0.7.7",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start": "concurrently \"yarn react:start\" \"yarn electron:start\"",
    "electron:start": "wait-on tcp:127.0.0.1:3000 && mode=dev electron .",
    "react:start": "react-scripts start",
    "react:build": "react-scripts build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "tailwindcss": "^3.4.3",
    "wait-on": "^7.2.0"
  },
  "proxy": "http://localhost:9080",
  "repository": {
    "type": "git",
    "url": "git+git@github.com:the-next-team/the-next-client.git",
    "release": "latest"
  },
  "build": {
    "appId": "kr.co.bonjin.electron",
    "artifactName": "${productName}-${version}.${ext}",
    "publish": {
      "provider": "github"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "identity": null
    },
    "dmg": {
      "title": "리테일금융시스템",
      "sign": false,
      "icon": "./src/assets/icons/icon.ico"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "verifyUpdateCodeSignature": false,
      "icon": "./src/assets/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "language": 1042,
      "shortcutName": "리테일금융시스템",
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "zip",
        "tar.gz"
      ],
      "icon": "./resources/linuxicon"
    },
    "directories": {
      "output": "dist"
    }
  }
}
